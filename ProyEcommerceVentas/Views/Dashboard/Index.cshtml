
@{
    ViewBag.Title = "Index";
}

<!-- CONTENIDO -->
<div class="container my-5">
    <h2 class="fw-semibold mb-1">Bienvenido, @ViewBag.Usuario</h2>
    <p class="text-muted">Panel de control del sistema de gestión de ventas</p>

    <!-- RESUMEN -->
    <div class="row g-4 mt-4 mb-5">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm rounded-3">
                <div class="card-body d-flex align-items-center">
                    <div class="me-3">
                        <div class="bg-primary bg-opacity-10 text-primary rounded-circle p-3 fs-4">
                            <i class="bi bi-people-fill"></i>
                        </div>
                    </div>
                    <div>
                        <h6 class="mb-0 text-muted">Total Clientes</h6>
                        <h4 class="fw-bold mb-0">@ViewBag.totalClientes</h4>
                        <small class="text-muted">Clientes registrados</small>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card border-0 shadow-sm rounded-3">
                <div class="card-body d-flex align-items-center">
                    <div class="me-3">
                        <div class="bg-success bg-opacity-10 text-success rounded-circle p-3 fs-4">
                            <i class="bi bi-box-seam"></i>
                        </div>
                    </div>
                    <div>
                        <h6 class="mb-0 text-muted">Productos</h6>
                        <h4 class="fw-bold mb-0">@ViewBag.articulosTotal</h4>
                        <small class="text-muted">En inventario</small>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card border-0 shadow-sm rounded-3">
                <div class="card-body d-flex align-items-center">
                    <div class="me-3">
                        <div class="bg-warning bg-opacity-10 text-warning rounded-circle p-3 fs-4">
                            <i class="bi bi-cart-check-fill"></i>
                        </div>
                    </div>
                    <div>
                        <h6 class="mb-0 text-muted">Órdenes</h6>
                        <h4 class="fw-bold mb-0">@ViewBag.ventasTotales</h4>
                        <small class="text-muted">Órdenes totales</small>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card border-0 shadow-sm rounded-3">
                <div class="card-body d-flex align-items-center">
                    <div class="me-3">
                        <div class="bg-danger bg-opacity-10 text-danger rounded-circle p-3 fs-4">
                            <i class="bi bi-currency-dollar"></i>
                        </div>
                    </div>
                    <div>
                        <h6 class="mb-0 text-muted">Ingresos</h6>
                        <h4 class="fw-bold mb-0">S/. @String.Format("{0:N2}", ViewBag.montoTotal)</h4>
                        <small class="text-muted">Ingresos totales</small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- ALERTAS Y ACCIONES -->
    <div class="row g-4">
        <div class="col-md-6">
            <div class="card border-0 shadow-sm rounded-3">
                <div class="card-body">
                    <h5 class="mb-3"><i class="bi bi-exclamation-triangle-fill text-warning me-2"></i><strong>Alertas del Sistema</strong></h5>

                    <!-- Alerta: Stock bajo -->
                    @if (ViewBag.productosStockBajo != null && ((List<Capa_Entidad.Articulo>)ViewBag.productosStockBajo).Count > 0)
                    {
                        foreach (var art in (List<Capa_Entidad.Articulo>)ViewBag.productosStockBajo)
                        {
                            <div class="d-flex align-items-center bg-danger bg-opacity-10 rounded p-3 mb-2">
                                <div class="me-3 text-danger fs-4">
                                    <i class="bi bi-exclamation-octagon-fill"></i>
                                </div>
                                <div class="flex-grow-1">
                                    <strong>@art.nom_art</strong> está por agotarse (Stock: @art.stk_art)
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="d-flex align-items-center bg-success bg-opacity-10 rounded p-3">
                            <div class="me-3 text-success fs-4">
                                <i class="bi bi-check-circle-fill"></i>
                            </div>
                            <div class="flex-grow-1">
                                <strong>No hay productos con stock bajo.</strong>
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>

        <!-- Acciones rápidas -->
        <div class="col-md-6">
            <div class="card border-0 shadow-sm rounded-3">
                <div class="card-body">
                    <h5 class="mb-2"><strong>Acciones Rápidas</strong></h5>
                    <p class="text-muted mb-3">Accede rápidamente a las funciones principales</p>
                    <div class="d-grid gap-2">
                        <a href="@Url.Action("Index", "Clientes")" class="btn btn-outline-primary">
                            <i class="bi bi-person-lines-fill me-2"></i> Gestionar Clientes
                        </a>

                        <a href="@Url.Action("Index", "Articulo")" class="btn btn-outline-success">
                            <i class="bi bi-box2-fill me-2"></i> Gestionar Productos
                        </a>

                        <a href="@Url.Action("Index", "Ordenes")" class="btn btn-outline-warning">
                            <i class="bi bi-bag-check-fill me-2"></i> Ver Órdenes
                        </a>

                        <a href="@Url.Action("IndexArticulos", "Ventas")" class="btn btn-outline-dark">
                            <i class="bi bi-bar-chart-line-fill me-2"></i> Realizar Venta
                        </a>

                    </div>
                </div>
            </div>
        </div>
        
    </div>
</div>