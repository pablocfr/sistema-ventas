<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

    <style>
        body {
            background-color: #f8f9fa !important;
        }

        .navbar-nav .nav-link {
            display: flex !important;
            align-items: center !important;
            gap: 0.25rem !important;
        }

        .nav-link.active {
            font-weight: 600 !important;
            color: #0d6efd !important;
            border-bottom: 2px solid #0d6efd !important;
        }

        .card-icon {
            font-size: 1.5rem !important;
            color: #6c757d !important;
        }

        .alert-light-yellow {
            background-color: #fffbea !important;
        }

        .alert-light-red {
            background-color: #fff0f0 !important;
        }
    </style>
</head>
<body>
    <!-- NAVBAR MODERNO -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
        <div class="container">
            @Html.ActionLink("SistemaVentas", "Index", "Home", null, new { @class = "navbar-brand d-flex align-items-center gap-2" })
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-between" id="navbarNav">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0 gap-2">
                    @Html.Raw($"<li class='nav-item'><a class='nav-link {(ViewContext.RouteData.Values["controller"]?.ToString() == "Dashboard" ? "active" : "")}' href='{Url.Action("Index", "Dashboard")}'><i class='bi bi-speedometer2'></i> Dashboard</a></li>")
                    @Html.Raw($"<li class='nav-item'><a class='nav-link {(ViewContext.RouteData.Values["controller"]?.ToString() == "Clientes" ? "active" : "")}' href='{Url.Action("Index", "Clientes")}'><i class='bi bi-people'></i> Clientes</a></li>")
                    @Html.Raw($"<li class='nav-item'><a class='nav-link {(ViewContext.RouteData.Values["controller"]?.ToString() == "Productos" ? "active" : "")}' href='{Url.Action("Index", "Articulo")}'><i class='bi bi-box'></i> Productos</a></li>")
                    @Html.Raw($"<li class='nav-item'><a class='nav-link {(ViewContext.RouteData.Values["controller"]?.ToString() == "Ver Carrito" ? "active" : "")}' href='{Url.Action("VerCarrito", "Ventas")}'><i class='bi bi-cart3'></i> Ver Carrito</a></li>")
                    @Html.Raw($"<li class='nav-item'><a class='nav-link {(ViewContext.RouteData.Values["controller"]?.ToString() == "Ventas" ? "active" : "")}' href='{Url.Action("IndexArticulos", "Ventas")}'><i class='bi bi-credit-card'></i> Vender Producto</a></li>")
                    @Html.Raw($"<li class='nav-item'><a class='nav-link {(ViewContext.RouteData.Values["controller"]?.ToString() == "Ventas" ? "active" : "")}' href='{Url.Action("ListarVentas", "Ventas")}'><i class='bi bi-graph-up'></i> Ventas Totales</a></li>")
                    @* @Html.Raw($"<li class='nav-item'><a class='nav-link {(ViewContext.RouteData.Values["controller"]?.ToString() == "Usuarios" ? "active" : "")}' href='{Url.Action("Index", "Usuarios")}'><i class='bi bi-person-gear'></i> Usuarios</a></li>")*@
                </ul>
                <div class="dropdown">
                    <a class="btn btn-light dropdown-toggle d-flex align-items-center gap-2" href="#" role="button" id="dropdownUsuario" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="bi bi-person-circle"></i> @ViewBag.Usuario
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownUsuario">
                        <li>
                            <h6 class="dropdown-header">Rol: @ViewBag.Rol</h6>
                        </li>
                        <li>
                            <hr class="dropdown-divider" />
                        </li>
                        <li>
                            <a class="dropdown-item text-danger" href="@Url.Action("Logout", "Login")">
                                <i class="bi bi-box-arrow-right me-2"></i> Cerrar sesión
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>

    <!-- CONTENIDO PRINCIPAL -->
    <div class="container body-content mt-4">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - SistemaVentas</p>
        </footer>
    </div>

    <!-- Bootstrap JS y Scripts -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

</body>

</html>
