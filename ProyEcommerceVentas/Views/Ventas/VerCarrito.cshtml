@model IEnumerable<Capa_Entidad.Carrito>

@{
    ViewBag.Title = "VerCarrito";
}

@{
    ViewBag.Title = "Carrito de Compras";
}
<div class="card-carrito">
    <h2>Carrito de Compras</h2>

    <div class="botones-carrito">
        @Html.ActionLink("⬅️ Seguir Comprando", "IndexArticulos", null, new { @class = "btn btn-warning shadow-sm" })
        @Html.ActionLink("💳 Pagar Carrito", "PagarCarrito", null, new { @class = "btn btn-primary shadow-sm" })
    </div>

    <table class="table-carrito">
        <thead>
            <tr>
                <th>📷 Foto</th>
                <th>@Html.DisplayNameFor(model => model.First().Codigo)</th>
                <th>@Html.DisplayNameFor(model => model.First().Nombre)</th>
                <th>@Html.DisplayNameFor(model => model.First().Precio)</th>
                <th>@Html.DisplayNameFor(model => model.First().Cantidad)</th>
                <th>@Html.DisplayNameFor(model => model.First().Total)</th>
                <th>Acción</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img src="@Url.Content("~/img-articulos/" + item.Codigo + ".jpg")"
                             alt="@item.Nombre"
                             class="img-carrito" />
                    </td>
                    <td>@item.Codigo</td>
                    <td>@item.Nombre</td>
                    <td><span class="text-success fw-bold">S/. @item.Precio.ToString("N2")</span></td>
                    <td>@item.Cantidad</td>
                    <td><strong>S/. @item.Total.ToString("N2")</strong></td>
                    <td>
                        @Html.ActionLink("Quitar 1", "Quitar_1_Item", new { id = item.Codigo },
                            new { @class = "btn btn-outline-danger btn-sm" })
                    </td>
                </tr>
            }
        </tbody>
    </table>

    @if (ViewBag.total != null)
    {
        <div class="total-final">
            Total a Pagar: S/. @((decimal)ViewBag.total)
        </div>
    }

    <div class="clearfix"></div>
</div>

<style>
    body {
        background-color: #f0f2f5;
    }

    .card-carrito {
        background: #ffffff;
        border-radius: 16px;
        padding: 30px;
        margin: 40px auto;
        box-shadow: 0 8px 20px rgba(0,0,0,0.1);
        max-width: 950px;
        transition: all 0.3s ease;
    }

        .card-carrito:hover {
            box-shadow: 0 10px 30px rgba(0,0,0,0.15);
        }

        .card-carrito h2 {
            font-size: 26px;
            color: #d32f2f;
            border-bottom: 2px solid #e0e0e0;
            padding-bottom: 12px;
            margin-bottom: 25px;
            display: flex;
            align-items: center;
        }

            .card-carrito h2::before {
                content: '🛒';
                margin-right: 10px;
            }

    .info-carrito {
        font-size: 17px;
        margin-bottom: 10px;
        color: #555;
    }

    .table-carrito {
        margin-top: 20px;
        background-color: white;
        border-collapse: collapse;
        width: 100%;
    }

        .table-carrito th, .table-carrito td {
            text-align: center;
            padding: 14px;
            border-bottom: 1px solid #e0e0e0;
            vertical-align: middle;
        }

        .table-carrito th {
            background-color: #f5f5f5;
            color: #333;
        }

        .table-carrito tbody tr:hover {
            background-color: #f9f9f9;
        }

    .img-carrito {
        width: 70px;
        height: 70px;
        object-fit: cover;
        border-radius: 8px;
    }

    .total-final {
        text-align: right;
        margin-top: 25px;
        font-size: 22px;
        font-weight: bold;
        color: #1b5e20;
        background: #e8f5e9;
        padding: 18px 22px;
        border-radius: 14px;
        max-width: 350px;
        float: right;
        border-left: 6px solid #4caf50;
    }

    .botones-carrito {
        margin-top: 20px;
        display: flex;
        justify-content: space-between;
        flex-wrap: wrap;
        gap: 10px;
    }

    .clearfix {
        clear: both;
    }
</style>
