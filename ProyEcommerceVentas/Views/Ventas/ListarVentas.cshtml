@model IEnumerable<Capa_Entidad.VENTAS_AGRUPADAS>

@{
    ViewBag.Title = "ListarVentas";
}

<!-- DataTables CSS -->
<link rel="stylesheet" href="https://cdn.datatables.net/2.3.2/css/dataTables.dataTables.min.css" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">

<h2 class="mb-4">📋 Listado de Ventas</h2>

<p>
    @Html.ActionLink("➕ Nueva Venta", "IndexArticulos", null, new { @class = "btn btn-success shadow-sm mb-3" })
</p>

<div class="card shadow-sm rounded-3 border-0">
    <div class="card-body p-3">
        <!-- Agregamos padding aquí -->
        <div class="table-responsive rounded-3">
            <!-- Añadimos clase de Bootstrap -->
            <table id="tabla-ventas" class="table table-striped table-hover mb-0">
                <thead class="table-dark">
                    <tr>
                        <th>🧾 Nº Venta</th>
                        <th>👤 Cliente</th>
                        <th>📦 Total Artículos</th>
                        <th>💵 Total Venta (S/)</th>
                        <th>🔍 Opciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.num_vta</td>
                            <td>@item.nom_cli</td>
                            <td>@item.total_articulos</td>
                            <td>S/. @item.total_venta.ToString("N2")</td>
                            <td>
                                @Html.ActionLink("👁️ Ver Detalle", "ListarDetalleVenta", new { id = item.num_vta }, new { @class = "btn btn-primary btn-sm rounded-pill" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


<!-- jQuery y DataTables -->
<script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
<script src="https://cdn.datatables.net/2.3.2/js/dataTables.min.js"></script>

<!-- Inicialización -->
<script>
    $(document).ready(function () {
        new DataTable('#tabla-ventas', {
            language: {
                url: 'https://cdn.datatables.net/plug-ins/1.13.5/i18n/es-ES.json'
            },
            pageLength: 10
        });
    });
</script>