@model Capa_Entidad.Articulo

@{
    ViewBag.Title = "Eliminar Artículo";
}

<div class="card shadow border-0 rounded-4 mt-4 mb-5">
    <div class="card-header bg-danger text-white rounded-top-4">
        <h5 class="mb-0">
            <i class="bi bi-trash3 me-2"></i>Confirmar Eliminación
        </h5>
    </div>

    <div class="card-body px-4 py-4">
        <div class="alert alert-warning d-flex align-items-center" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            ¿Estás seguro de que deseas eliminar este artículo?
        </div>

        <dl class="row mb-4">
            <dt class="col-sm-3 fw-semibold text-secondary">Código</dt>
            <dd class="col-sm-9 text-dark">@Html.DisplayFor(model => model.cod_art)</dd>

            <dt class="col-sm-3 fw-semibold text-secondary">Nombre</dt>
            <dd class="col-sm-9 text-dark">@Html.DisplayFor(model => model.nom_art)</dd>

            <dt class="col-sm-3 fw-semibold text-secondary">Unidad de Medida</dt>
            <dd class="col-sm-9 text-dark">@Html.DisplayFor(model => model.uni_med)</dd>

            <dt class="col-sm-3 fw-semibold text-secondary">Precio</dt>
            <dd class="col-sm-9 text-dark">@Html.DisplayFor(model => model.pre_art)</dd>

            <dt class="col-sm-3 fw-semibold text-secondary">Stock</dt>
            <dd class="col-sm-9 text-dark">@Html.DisplayFor(model => model.stk_art)</dd>
        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="d-flex justify-content-end gap-2">
                <input type="submit" value="Eliminar" class="btn btn-danger px-4" />
                @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-outline-secondary px-4" })
            </div>
        }
    </div>
</div>
