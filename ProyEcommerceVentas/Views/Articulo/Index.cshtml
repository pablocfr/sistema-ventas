@model IEnumerable<Capa_Entidad.Articulo>

@{
    ViewBag.Title = "Index";
}

<!-- DataTables CSS -->
<link rel="stylesheet" href="https://cdn.datatables.net/2.3.2/css/dataTables.dataTables.min.css" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">

<!-- FORMULARIO DE REGISTRO -->
<div class="card shadow-sm border-0 rounded-4 mb-5">
    <div class="card-body">
        <!-- Título -->
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h5 class="mb-0 fw-bold">Gestión de Artículos</h5>
        </div>

        <!-- Formulario de registro -->
        @using (Html.BeginForm("Create", "Articulo", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <div class="border rounded p-3 mb-4 bg-light">
                <h5 class="mb-3">Registrar nuevo artículo</h5>

                <div class="row g-3">
                    <div class="col-md-3">
                        @Html.Label("Nombre")
                        @Html.TextBox("nom_art", null, new { @class = "form-control" })
                        @Html.ValidationMessage("nom_art", "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-3">
                        @Html.Label("Unidad de medida")
                        @Html.TextBox("uni_med", null, new { @class = "form-control" })
                        @Html.ValidationMessage("uni_med", "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-3">
                        @Html.Label("Precio")
                        @Html.TextBox("pre_art", null, new { @class = "form-control", @type = "number", @step = "0.01" })
                        @Html.ValidationMessage("pre_art", "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-3">
                        @Html.Label("Stock")
                        @Html.TextBox("stk_art", null, new { @class = "form-control", @type = "number" })
                        @Html.ValidationMessage("stk_art", "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="mt-3">
                    <input type="submit" value="Registrar Artículo" class="btn btn-success" />
                </div>
            </div>
        }

        <!-- Tabla de artículos -->
        <div class="table-responsive">
            <table id="tabla-articulos" class="table table-striped table-bordered align-middle" style="width:100%">
                <thead class="table-light">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.First().cod_art)</th>
                        <th>@Html.DisplayNameFor(model => model.First().nom_art)</th>
                        <th>@Html.DisplayNameFor(model => model.First().uni_med)</th>
                        <th>@Html.DisplayNameFor(model => model.First().pre_art)</th>
                        <th>@Html.DisplayNameFor(model => model.First().stk_art)</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.cod_art)</td>
                            <td>@Html.DisplayFor(modelItem => item.nom_art)</td>
                            <td>@Html.DisplayFor(modelItem => item.uni_med)</td>
                            <td>@Html.DisplayFor(modelItem => item.pre_art)</td>
                            <td>@Html.DisplayFor(modelItem => item.stk_art)</td>
                            <td>
                                <div class="d-flex gap-2">
                                    <button type="button"
                                            class="btn btn-sm btn-outline-primary me-1"
                                            data-bs-toggle="modal"
                                            data-bs-target="#detalleArticuloModal"
                                            data-codart="@item.cod_art">
                                        Detalle
                                    </button>

                                    @Html.ActionLink(" ",
                                        "Edit",
                                        new { id = item.cod_art },
                                        new { @class = "btn btn-sm btn-outline-warning bi bi-pencil", @title = "Editar" })

                                    @Html.ActionLink(" ",
                                        "Delete",
                                        new { id = item.cod_art },
                                        new { @class = "btn btn-sm btn-outline-danger bi bi-trash", @title = "Eliminar" })
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- MODAL DE DETALLES -->
        <div class="modal fade" id="detalleArticuloModal" tabindex="-1" aria-labelledby="detalleArticuloModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered modal-lg">
                <div class="modal-content border-0 shadow-lg rounded-4">
                    <div class="modal-header bg-gradient bg-primary text-white rounded-top-4">
                        <h5 class="modal-title fw-bold" id="detalleArticuloModalLabel">
                            <i class="bi bi-person-lines-fill me-2"></i>Detalle del Articulo
                        </h5>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                    </div>
                    <div class="modal-body">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="fw-semibold text-secondary">Código</label>
                                <div class="form-control-plaintext fw-bold text-dark" id="detalle-cod_art"></div>
                            </div>
                            <div class="col-md-6">
                                <label class="fw-semibold text-secondary">Nombre</label>
                                <div class="form-control-plaintext text-dark" id="detalle-nom_art"></div>
                            </div>
                            <div class="col-md-6">
                                <label class="fw-semibold text-secondary">Unidad de Medida</label>
                                <div class="form-control-plaintext text-dark" id="detalle-uni_med"></div>
                            </div>
                            <div class="col-md-6">
                                <label class="fw-semibold text-secondary">Precio</label>
                                <div class="form-control-plaintext text-dark" id="detalle-pre_art"></div>
                            </div>
                            <div class="col-md-6">
                                <label class="fw-semibold text-secondary">Stock</label>
                                <div class="form-control-plaintext text-dark" id="detalle-stk_art"></div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer bg-light rounded-bottom-4">
                        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
                            <i class="bi bi-x-circle me-1"></i> Cerrar
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- jQuery y DataTables -->
<script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
<script src="https://cdn.datatables.net/2.3.2/js/dataTables.min.js"></script>

<!-- Inicialización -->
<script>
    $(document).ready(function () {
        new DataTable('#tabla-articulos', {
            language: {
                url: 'https://cdn.datatables.net/plug-ins/1.13.5/i18n/es-ES.json'
            },
            pageLength: 10
        });
    });
</script>

@section Scripts {
    <script>
    $('#detalleArticuloModal').on('show.bs.modal', function (event) {
        var button = $(event.relatedTarget);
        var cod_art = button.data('codart');
        var modal = $(this);

        $.ajax({
            url: '@Url.Action("DetailsAjax", "Articulo")'.replace(/&amp;/g, '&'),
            type: 'GET',
            data: { id: cod_art },
            success: function (data) {
                modal.find('#detalle-cod_art').text(data.cod_art);
                modal.find('#detalle-nom_art').text(data.nom_art);
                modal.find('#detalle-uni_med').text(data.uni_med);
                modal.find('#detalle-pre_art').text(parseFloat(data.pre_art).toFixed(2));
                modal.find('#detalle-stk_art').text(data.stk_art);

            },
            error: function () {
                alert('Error al cargar los datos del Articulo.');
            }
        });
    });
    </script>

}