@model Capa_Entidad.Articulo

@{
    ViewBag.Title = "Edit";
}

<div class="card shadow border-0 rounded-4 mt-4 mb-5">
    <div class="card-header bg-primary text-white rounded-top-4">
        <h5 class="mb-0">
            <i class="bi bi-pencil-square me-2"></i>Editar Artículo
        </h5>
    </div>

    <div class="card-body px-4 py-4">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger mb-3" })

            <div class="row g-4">
                <div class="col-md-3">
                    @Html.LabelFor(model => model.cod_art, new { @class = "form-label fw-semibold" })
                    @Html.TextBoxFor(model => model.cod_art, new { @class = "form-control bg-light", @readonly = "readonly" })
                </div>

                <div class="col-md-3">
                    @Html.LabelFor(model => model.nom_art, new { @class = "form-label fw-semibold" })
                    @Html.TextBoxFor(model => model.nom_art, new { @class = "form-control" })
                </div>

                <div class="col-md-3">
                    @Html.LabelFor(model => model.uni_med, new { @class = "form-label fw-semibold" })
                    @Html.TextBoxFor(model => model.uni_med, new { @class = "form-control" })
                </div>

                <div class="col-md-3">
                    @Html.LabelFor(model => model.pre_art, new { @class = "form-label fw-semibold" })
                    @Html.TextBoxFor(model => model.pre_art, new { @class = "form-control", type = "number", step = "0.01" })
                </div>

                <div class="col-md-3">
                    @Html.LabelFor(model => model.stk_art, new { @class = "form-label fw-semibold" })
                    @Html.TextBoxFor(model => model.stk_art, new { @class = "form-control", type = "number" })
                </div>

            </div>

            <div class="mt-4 d-flex justify-content-end gap-2">
                <input type="submit" value="Guardar Cambios" class="btn btn-primary px-4" />
                @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-outline-secondary px-4" })
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
