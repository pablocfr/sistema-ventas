@model IEnumerable<Capa_Entidad.Cliente>

@{
    ViewBag.Title = "Index";
}

<!-- DataTables CSS -->
<link rel="stylesheet" href="https://cdn.datatables.net/2.3.2/css/dataTables.dataTables.min.css" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">

<div class="card shadow-sm border-0 rounded-3 mb-5">
    <div class="card-body">

        <!-- Título -->
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h5 class="mb-0">Gestión de Clientes</h5>
        </div>

        <!-- FORMULARIO DE REGISTRO -->
        @using (Html.BeginForm("CreateClientes", "Clientes", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <div class="border rounded p-3 mb-4 bg-light">
                <h5 class="mb-3">Registrar nuevo cliente</h5>

                <div class="row g-3">
                    <div class="col-md-3">
                        @Html.Label("Nombre")
                        @Html.TextBox("nom_cli", null, new { @class = "form-control" })
                        @Html.ValidationMessage("nom_cli", "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-3">
                        @Html.Label("Teléfono")
                        @Html.TextBox("tel_cli", null, new { @class = "form-control" })
                        @Html.ValidationMessage("tel_cli", "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-3">
                        @Html.Label("Correo")
                        @Html.TextBox("cor_cli", null, new { @class = "form-control" })
                        @Html.ValidationMessage("cor_cli", "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-3">
                        @Html.Label("Crédito")
                        @Html.TextBox("cred_cli", null, new { @class = "form-control" })
                        @Html.ValidationMessage("cred_cli", "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-3">
                        @Html.Label("Dirección")
                        @Html.TextBox("dir_cli", null, new { @class = "form-control" })
                        @Html.ValidationMessage("dir_cli", "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-3">
                        @Html.Label("Distrito")
                        @Html.DropDownList("cod_dist", (SelectList)ViewBag.distritos, "Seleccionar", new { @class = "form-select" })
                        @Html.ValidationMessage("cod_dist", "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-3">
                        @Html.Label("Fecha de Nacimiento")
                        @Html.TextBox("fec_nac", null, new { @class = "form-control", @type = "date" })
                        @Html.ValidationMessage("fec_nac", "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="mt-3">
                    <input type="submit" value="Registrar Cliente" class="btn btn-success" />
                </div>
            </div>
        }

        <!-- TABLA DE CLIENTES -->
        <div class="table-responsive">
            <table id="tabla-clientes" class="table table-striped table-bordered align-middle" style="width:100%">
                <thead class="table-light">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.First().cod_cli)</th>
                        <th>@Html.DisplayNameFor(model => model.First().nom_cli)</th>
                        <th>@Html.DisplayNameFor(model => model.First().cor_cli)</th>
                        <th>@Html.DisplayNameFor(model => model.First().tel_cli)</th>
                        <th>@Html.DisplayNameFor(model => model.First().dir_cli)</th>
                        <th>@Html.DisplayNameFor(model => model.First().fec_nac)</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.cod_cli)</td>
                            <td>@Html.DisplayFor(modelItem => item.nom_cli)</td>
                            <td>@Html.DisplayFor(modelItem => item.cor_cli)</td>
                            <td>@Html.DisplayFor(modelItem => item.tel_cli)</td>
                            <td>@Html.DisplayFor(modelItem => item.dir_cli)</td>
                            <td>@Html.DisplayFor(modelItem => item.fec_nac)</td>
                            <td>
                                <button type="button"
                                        class="btn btn-sm btn-outline-primary me-1"
                                        data-bs-toggle="modal"
                                        data-bs-target="#detalleClienteModal"
                                        data-codcli="@item.cod_cli">
                                    Detalle
                                </button>
                                @Html.ActionLink("Editar", "EditCliente", new { id = item.cod_cli }, new { @class = "btn btn-sm btn-outline-warning me-1" })
                                @Html.ActionLink("Eliminar", "DeleteCliente", new { id = item.cod_cli }, new { @class = "btn btn-sm btn-outline-danger" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- MODAL DE DETALLES -->
        <div class="modal fade" id="detalleClienteModal" tabindex="-1" aria-labelledby="detalleClienteModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered modal-lg">
                <div class="modal-content border-0 shadow-lg rounded-4">
                    <div class="modal-header bg-gradient bg-primary text-white rounded-top-4">
                        <h5 class="modal-title fw-bold" id="detalleClienteModalLabel">
                            <i class="bi bi-person-lines-fill me-2"></i>Detalle del Cliente
                        </h5>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                    </div>
                    <div class="modal-body">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="fw-semibold text-secondary">Código</label>
                                <div class="form-control-plaintext fw-bold text-dark" id="detalle-cod_cli"></div>
                            </div>
                            <div class="col-md-6">
                                <label class="fw-semibold text-secondary">Nombre</label>
                                <div class="form-control-plaintext text-dark" id="detalle-nom_cli"></div>
                            </div>
                            <div class="col-md-6">
                                <label class="fw-semibold text-secondary">Teléfono</label>
                                <div class="form-control-plaintext text-dark" id="detalle-tel_cli"></div>
                            </div>
                            <div class="col-md-6">
                                <label class="fw-semibold text-secondary">Correo</label>
                                <div class="form-control-plaintext text-dark" id="detalle-cor_cli"></div>
                            </div>
                            <div class="col-md-6">
                                <label class="fw-semibold text-secondary">Crédito</label>
                                <div class="form-control-plaintext text-dark" id="detalle-cred_cli"></div>
                            </div>
                            <div class="col-md-6">
                                <label class="fw-semibold text-secondary">Dirección</label>
                                <div class="form-control-plaintext text-dark" id="detalle-dir_cli"></div>
                            </div>
                            <div class="col-md-6">
                                <label class="fw-semibold text-secondary">Distrito</label>
                                <div class="form-control-plaintext text-dark" id="detalle-cod_dist"></div>
                            </div>
                            <div class="col-md-6">
                                <label class="fw-semibold text-secondary">Fecha de Nacimiento</label>
                                <div class="form-control-plaintext text-dark" id="detalle-fec_nac"></div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer bg-light rounded-bottom-4">
                        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
                            <i class="bi bi-x-circle me-1"></i> Cerrar
                        </button>
                    </div>
                </div>
            </div>
        </div>


    </div>
</div>

<!-- jQuery y DataTables -->
<script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
<script src="https://cdn.datatables.net/2.3.2/js/dataTables.min.js"></script>

<!-- Inicialización -->
<script>
    $(document).ready(function () {
        new DataTable('#tabla-clientes', {
            language: {
                url: 'https://cdn.datatables.net/plug-ins/1.13.5/i18n/es-ES.json'
            },
            pageLength: 10
        });
    });
</script>

@section Scripts {
    <script>
    $('#detalleClienteModal').on('show.bs.modal', function (event) {
        var button = $(event.relatedTarget);
        var cod_cli = button.data('codcli');
        var modal = $(this);

        $.ajax({
            url: '@Url.Action("DetailsAjax", "Clientes")',
            type: 'GET',
            data: { id: cod_cli },
            success: function (data) {
                modal.find('#detalle-cod_cli').text(data.cod_cli);
                modal.find('#detalle-nom_cli').text(data.nom_cli);
                modal.find('#detalle-tel_cli').text(data.tel_cli);
                modal.find('#detalle-cor_cli').text(data.cor_cli);
                modal.find('#detalle-cred_cli').text("S/. " + data.cred_cli + ".00");
                modal.find('#detalle-dir_cli').text(data.dir_cli);
                modal.find('#detalle-cod_dist').text(data.cod_dist);

                // --- Formatear fecha correctamente ---
                if (data.fec_nac) {
                    let fechaMs = parseInt(data.fec_nac.replace(/[^0-9]/g, ''));
                    let fecha = new Date(fechaMs);

                    const meses = ['enero', 'febrero', 'marzo', 'abril', 'mayo', 'junio',
                        'julio', 'agosto', 'septiembre', 'octubre', 'noviembre', 'diciembre'];

                    let dia = fecha.getDate();
                    let mes = meses[fecha.getMonth()];
                    let anio = fecha.getFullYear();

                    let fechaFormateada = `${dia} de ${mes} de ${anio}`;
                    modal.find('#detalle-fec_nac').text(fechaFormateada);
                } else {
                    modal.find('#detalle-fec_nac').text('Sin fecha');
                }
            },
            error: function () {
                alert('Error al cargar los datos del cliente.');
            }
        });
    });
    </script>

}


    </script>
}
