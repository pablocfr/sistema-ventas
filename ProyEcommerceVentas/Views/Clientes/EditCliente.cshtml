@model Capa_Entidad.Cliente

@{
    ViewBag.Title = "EditCliente";
}

<div class="card shadow border-0 rounded-4 mt-4 mb-5">
    <div class="card-header bg-success text-white rounded-top-4">
        <h5 class="mb-0">
            <i class="bi bi-pencil-square me-2"></i>Editar Cliente
        </h5>
    </div>

    <div class="card-body px-4 py-4">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger mb-3" })

            <div class="row g-4">
                <div class="col-md-3">
                    @Html.LabelFor(model => model.cod_cli, new { @class = "form-label fw-semibold" })
                    @Html.TextBoxFor(model => model.cod_cli, new { @class = "form-control bg-light", @readonly = "readonly" })
                </div>

                <div class="col-md-3">
                    @Html.LabelFor(model => model.nom_cli, new { @class = "form-label fw-semibold" })
                    @Html.TextBoxFor(model => model.nom_cli, new { @class = "form-control" })
                </div>

                <div class="col-md-3">
                    @Html.LabelFor(model => model.tel_cli, new { @class = "form-label fw-semibold" })
                    @Html.TextBoxFor(model => model.tel_cli, new { @class = "form-control" })
                </div>

                <div class="col-md-3">
                    @Html.LabelFor(model => model.cor_cli, new { @class = "form-label fw-semibold" })
                    @Html.TextBoxFor(model => model.cor_cli, new { @class = "form-control" })
                </div>

                <div class="col-md-3">
                    @Html.LabelFor(model => model.cred_cli, new { @class = "form-label fw-semibold" })
                    @Html.TextBoxFor(model => model.cred_cli, new { @class = "form-control" })
                </div>

                <div class="col-md-3">
                    @Html.LabelFor(model => model.dir_cli, new { @class = "form-label fw-semibold" })
                    @Html.TextBoxFor(model => model.dir_cli, new { @class = "form-control" })
                </div>

                <div class="col-md-3">
                    @Html.LabelFor(model => model.cod_dist, new { @class = "form-label fw-semibold" })
                    @Html.DropDownListFor(model => model.cod_dist, (SelectList)ViewBag.distritos, "Seleccionar", new { @class = "form-select" })
                </div>

                <div class="col-md-3">
                    @Html.LabelFor(model => model.fec_nac, new { @class = "form-label fw-semibold" })
                    @Html.TextBoxFor(model => model.fec_nac, new { @class = "form-control"})
                </div>
            </div>

            <div class="mt-4 d-flex justify-content-end gap-2">
                <input type="submit" value="Guardar Cambios" class="btn btn-success px-4" />
                @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-outline-secondary px-4" })
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
