@model Capa_Entidad.Cliente

@{
    ViewBag.Title = "Eliminar Cliente";
}

<div class="card shadow border-0 rounded-4 mt-4 mb-5">
    <div class="card-header bg-danger text-white rounded-top-4">
        <h5 class="mb-0">
            <i class="bi bi-trash3 me-2"></i>Confirmar Eliminación de Cliente
        </h5>
    </div>

    <div class="card-body px-4 py-4">
        <div class="alert alert-warning d-flex align-items-center" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            ¿Estás seguro de que deseas eliminar este cliente?
        </div>

        <dl class="row mb-4">
            <dt class="col-sm-4 fw-semibold text-secondary">Código</dt>
            <dd class="col-sm-8 text-dark">@Html.DisplayFor(model => model.cod_cli)</dd>

            <dt class="col-sm-4 fw-semibold text-secondary">Nombre</dt>
            <dd class="col-sm-8 text-dark">@Html.DisplayFor(model => model.nom_cli)</dd>

            <dt class="col-sm-4 fw-semibold text-secondary">Teléfono</dt>
            <dd class="col-sm-8 text-dark">@Html.DisplayFor(model => model.tel_cli)</dd>

            <dt class="col-sm-4 fw-semibold text-secondary">Correo</dt>
            <dd class="col-sm-8 text-dark">@Html.DisplayFor(model => model.cor_cli)</dd>

            <dt class="col-sm-4 fw-semibold text-secondary">Crédito</dt>
            <dd class="col-sm-8 text-dark">@Html.DisplayFor(model => model.cred_cli)</dd>

            <dt class="col-sm-4 fw-semibold text-secondary">Dirección</dt>
            <dd class="col-sm-8 text-dark">@Html.DisplayFor(model => model.dir_cli)</dd>

            <dt class="col-sm-4 fw-semibold text-secondary">Distrito</dt>
            <dd class="col-sm-8 text-dark">@Html.DisplayFor(model => model.cod_dist)</dd>

            <dt class="col-sm-4 fw-semibold text-secondary">Fecha de Nacimiento</dt>
            <dd class="col-sm-8 text-dark">@Html.DisplayFor(model => model.fec_nac)</dd>
        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="d-flex justify-content-end gap-2">
                <input type="submit" value="Eliminar" class="btn btn-danger px-4" />
                @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-outline-secondary px-4" })
            </div>
        }
    </div>
</div>
